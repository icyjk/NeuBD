		<class>NeuBDProyectoSII.Usuario</class>
		<class>NeuBDProyectoSII.Asignatura</class>
		<class>NeuBDProyectoSII.Asignatura_matricula</class>
		<class>NeuBDProyectoSII.Centro</class>
		<class>NeuBDProyectoSII.Clase</class>
		<class>NeuBDProyectoSII.Datos_alumnado</class>
		<class>NeuBDProyectoSII.Encuesta</class>
		<class>NeuBDProyectoSII.Expedientes</class>
		<class>NeuBDProyectoSII.Grupo</class>
		<class>NeuBDProyectoSII.Grupos_por_asignatura</class>
